.simple_form
  overflow: hidden
  padding: 0 5px
  fieldset
    width: 100%
    legend
      width: 100%
    &:after, legend:after
      clear: both
      content: "."
      display: block
      height: 0
      visibility: hidden
  .inputs
    .input
      clear: both
      label
        display: block
      input
        &.email, &.string, &.password, &.autocomplete
          margin: 0
          font-size: 15px
          padding: 5px
    textarea
      margin: 0
      font-size: 15px
      padding: 5px
    .input
      select
        padding: 5px
        font-size: 15px
      input.boolean
        float: left
        margin: 5px 8px 5px 0
      label.boolean
        line-height: 23px
        font-size: 80%
    .field_with_errors input
      &.email, &.string, &.password
        border-color: #ee7171
    .error, .hint
      display: block
      margin: 5px 0 8px
      color: #999
      font-size: 75%
  .actions
    float: left
    margin: 20px 0 10px

.ie .simple_form fieldset
  display: block
  zoom: 1
  legend
    display: block
    zoom: 1

