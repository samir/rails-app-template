// Errors SimpleForm
#error_explanation, .error_messages
  margin: 10px auto
  border: 1px solid #c00
  background-color: #fee
  width: 500px
  h2
    font-weight: bold
    text-indent: 15px
    font-size: 16px
    background-color: #f99
    color: #600
    padding: 0px
    border-bottom: 0
  p
    color: #333
    margin: 10px
  ul
    margin: 10px
    li
      color: #666
      font-size: 12px
      list-style: decimal
      list-style-position: inside
