%html{ :lang => I18n.locale.to_s.downcase }
  %head
    %meta(charset="UTF-8")
    %title= "#{page_title} • APP_NAME"
    = stylesheet_includes :base
    = dispatcher_tag
    = csrf_meta_tag

    /[if lt IE 9]
      %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }

  = body do
    = page do
      = header :class => "clearfix" do
        %h1
          APP_NAME

      = flash_messages

      = main :class => "clearfix" do
        = yield

      = footer do
        %p.copyright
          Copyright © 2011 APP_NAME.

    = javascript_includes :base


!!!
%html{ :lang => I18n.locale.to_s.downcase }
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:charset => "utf-8"}
    %title= "#{page_title} • APP_NAME"

    / Le styles
    = stylesheet_link_tag "application"
    = yield(:stylesheet)

    = dispatcher_tag
    = csrf_meta_tag

    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    / Le fav and touch icons
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}

  = body do
    = page :class => "container" do
      .content
        = header :class => "clearfix page-header" do

          #logo
            APP_NAME
            %small tagline

        = main :class => "clearfix" do
          = yield

      = footer do
        %p.copyright
          Copyright &copy; #{Date.current.year} APP_NAME.

    / Le javascripts
    :javascript
      // put here some global variables
    = javascript_include_tag "application"
    = yield(:javascript)

    /[if lt IE 9]
      = javascript_include_tag "selectivizr.min"

    - if Rails.env != "development"
      = render "shared/analytics"
